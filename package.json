{
  "private": true,
  "title": "Comics Zone: Glitch",
  "description": "An attempt to create HTML5 spin-off for the great SEGA game called Comix Zone",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --config webpack/webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.prod.js",
    "eslint": "eslint . --ext .ts",
    "tslint": "tsc --noEmit",
    "lint": "yarn eslint && yarn tslint",
    "test": "jest",
    "postinstall": "yarn simple-git-hooks"
  },
  "lint-staged": {
    "*.{ts,js,json,css,html}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn lint"
  },
  "devDependencies": {
    "@principalstudio/html-webpack-inject-preload": "^1.2.7",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.5.1",
    "image-minimizer-webpack-plugin": "^3.8.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "json-minimizer-webpack-plugin": "^4.0.0",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^2.7.5",
    "prettier": "^2.3.2",
    "sharp": "^0.32.1",
    "simple-git-hooks": "^2.7.0",
    "style-loader": "^3.3.2",
    "terser-webpack-plugin": "^5.3.7",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.0.4",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.8.1"
  },
  "engines": {
    "node": ">=18",
    "yarn": ">=3"
  }
}
